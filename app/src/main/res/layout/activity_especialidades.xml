<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#132434"
    android:layout_height="match_parent"
    tools:context=".Especialidades">

    <TextView
        android:id="@+id/tvEspecialidadEscogida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:background="#1E4713"
        android:textStyle="bold"
        android:padding="20dp"
        android:textSize="20dp"
        android:text="Especialidades"
        android:textColor="#F7DEC5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rwEspecialidades"
        android:layout_width="407dp"
        android:layout_height="383dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEspecialidadEscogida"
        tools:layout_editor_absoluteX="2dp" />
</androidx.constraintlayout.widget.ConstraintLayout>